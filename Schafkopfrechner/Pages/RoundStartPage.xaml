<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schafkopfrechner.Pages.RoundStartPage"
             x:Name="RoundStartPageName">
    <ContentPage.Content>
        <StackLayout 
            Orientation="Vertical" 
                     VerticalOptions="Start">
            <!-- Legen ist erlaubt -->
            <ListView 
                ItemsSource="{Binding Players}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout
                                Orientation="Horizontal"
                                         Padding="8,0">
                                <Label 
                                    Text="{Binding Name}" 
                                    FontSize="14" 
                                    HorizontalOptions="Start" 
                                    WidthRequest="120" 
                                    VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger 
                                            TargetType="Label"
                                            Binding="{Binding IsGeber}" 
                                            Value="True">
                                            <Setter 
                                                Property="TextColor"
                                                Value="Black"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Label 
                                    Text="{Binding BankBalanceInCent}"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start"
                                    HorizontalTextAlignment="End"
                                    WidthRequest="50"/>
                                <Label 
                                    Text="Ct." FontSize="14"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start"
                                    WidthRequest="18" 
                                    HorizontalTextAlignment="Start"/>
                                <CheckBox 
                                    IsChecked="{Binding DidLegen}"
                                    HorizontalOptions="Start"
                                    IsVisible="{Binding Source={x:Reference RoundStartPageName}, Path=BindingContext.IsLegenAllowed}"/>
                                <Button 
                                    Text="SPIELE"
                                    FontSize="13"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    Clicked="PlayerButton_Clicked" 
                                    CommandParameter="{Binding Name}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                x:Name="RamschButton" 
                Text="Ramsch" 
                Clicked="RamschButton_Clicked"
                IsVisible="{Binding IsRamschAllowed}"
                VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
