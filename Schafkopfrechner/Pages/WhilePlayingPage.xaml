<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schafkopfrechner.Pages.WhilePlayingPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Start">
            <!-- Legen ist erlaubt -->
            <ListView ItemsSource="{Binding Players}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="8,0">
                                <Label Text="{Binding Name}" TextColor="Black" FontSize="14" HorizontalOptions="StartAndExpand" WidthRequest="120" VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsPlayer}" Value="True">
                                            <Setter Property="FontAttributes" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsGeber}" Value="True">
                                            <Setter Property="TextColor" Value="Red"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Label Text="{Binding BankBalanceInCent}" VerticalOptions="Center" HorizontalOptions="EndAndExpand" WidthRequest="50"/>
                                <Label Text="Cent" FontSize="14" VerticalOptions="Center" HorizontalOptions="StartAndExpand" WidthRequest="50"/>
                                <CheckBox IsEnabled="False" IsChecked="{Binding DidLegen}" HorizontalOptions="StartAndExpand" IsVisible="{Binding LegenIsAllowed}"/>
                                <CheckBox IsEnabled="true" IsChecked="{Binding DidKontra}" HorizontalOptions="StartAndExpand" IsVisible="{Binding KontraIsAllowed}"/>
                                <CheckBox Color="Black" IsEnabled="true" IsChecked="{Binding DidJungfrau}" HorizontalOptions="StartAndExpand" IsVisible="{Binding IsRamschPlayed}"/>
                                <CheckBox Color="Green" IsChecked="{Binding DidWin}" HorizontalOptions="StartAndExpand" IsVisible="true"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="Spielende" 
                Text="Spielende" 
                Clicked="PlayEndsButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>